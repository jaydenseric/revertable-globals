{
  "name": "revertable-globals",
  "version": "2.0.0",
  "description": "Sets globals that can be easily reverted to restore the original environment; useful for testing code that relies on the presence of certain globals.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "repository": "github:jaydenseric/revertable-globals",
  "homepage": "https://github.com/jaydenseric/revertable-globals#readme",
  "bugs": "https://github.com/jaydenseric/revertable-globals/issues",
  "funding": "https://github.com/sponsors/jaydenseric",
  "keywords": [
    "revertable",
    "temporary",
    "global",
    "globals",
    "esm",
    "mjs"
  ],
  "files": [
    "index.mjs"
  ],
  "sideEffects": false,
  "main": "./index.mjs",
  "exports": {
    ".": "./index.mjs",
    "./package": "./package.json",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^12.20 || >= 14.13"
  },
  "devDependencies": {
    "coverage-node": "^5.0.0",
    "eslint": "^7.25.0",
    "eslint-config-env": "^19.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.3.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jsdoc-md": "^10.1.0",
    "prettier": "^2.2.1",
    "test-director": "^6.0.0"
  },
  "scripts": {
    "jsdoc": "jsdoc-md",
    "test": "npm run test:eslint && npm run test:prettier && npm run test:api",
    "test:eslint": "eslint --ext mjs,js .",
    "test:prettier": "prettier -c .",
    "test:api": "coverage-node test.mjs",
    "prepublishOnly": "npm run jsdoc && npm test"
  }
}
