{
  "name": "revertable-globals",
  "version": "1.0.0",
  "description": "Sets globals that can be easily reverted to restore the original environment; useful for testing code that relies on the presence of certain globals.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "repository": "github:jaydenseric/revertable-globals",
  "homepage": "https://github.com/jaydenseric/revertable-globals#readme",
  "bugs": "https://github.com/jaydenseric/revertable-globals/issues",
  "funding": "https://github.com/sponsors/jaydenseric",
  "keywords": [
    "revertable",
    "temporary",
    "global",
    "globals"
  ],
  "files": [
    "index.js"
  ],
  "sideEffects": false,
  "main": "index.js",
  "engines": {
    "node": "^10.17.0 || ^12.0.0 || >= 13.7.0"
  },
  "devDependencies": {
    "coverage-node": "^3.0.0",
    "eslint": "^7.5.0",
    "eslint-config-env": "^15.0.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "hard-rejection": "^2.1.0",
    "jsdoc-md": "^7.0.0",
    "prettier": "^2.0.5",
    "test-director": "^4.0.1"
  },
  "scripts": {
    "prepare": "npm run prepare:jsdoc && npm run prepare:prettier",
    "prepare:jsdoc": "jsdoc-md",
    "prepare:prettier": "prettier --write readme.md",
    "test": "npm run test:eslint && npm run test:prettier && npm run test:api",
    "test:eslint": "eslint .",
    "test:prettier": "prettier -c .",
    "test:api": "coverage-node -r hard-rejection/register test",
    "prepublishOnly": "npm test"
  }
}
